            android:id="@+id/action_newsFeedFragment_to_sportsFragment"
            app:destination="@id/sportsFragment" />
        <action
            android:id="@+id/action_newsFeedFragment_to_scienceFragment"
            app:destination="@id/scienceFragment" />
        <action
            android:id="@+id/action_newsFeedFragment_to_entertainmentFragment2"
            app:destination="@id/entertainmentFragment" />
